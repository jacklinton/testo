{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom", "es5"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": false,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["test", "src"]
}
